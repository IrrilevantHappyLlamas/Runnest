<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/main_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorAccent"
              android:orientation="vertical"
              android:weightSum="4"
              android:theme="@style/AppTheme.NoActionBar"
              tools:ignore="Overdraw">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            tools:visibility="visible"
            android:layout_marginTop="56dp"
            android:layout_below="@+id/loginScrrenImage"
            android:layout_centerHorizontal="true"/>

        <ImageView
            app:srcCompat="@drawable/login_screen"
            android:id="@+id/loginScrrenImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:text="Who runs faster?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fasterTextView"
            android:textSize="18sp"
            android:textStyle="normal|italic"
            android:textColor="@color/colorDarkGreen"
            android:layout_marginBottom="30dp"
            android:layout_above="@+id/loginScrrenImage"
            android:layout_alignRight="@+id/runnestTextView"
            android:layout_alignEnd="@+id/runnestTextView"
            android:fontFamily="sans-serif"
            android:typeface="sans"/>

        <TextView
            android:text="Runnest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/runnestTextView"
            android:textSize="36sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal|bold"
            android:textColor="@color/colorDarkGreen"
            android:layout_marginBottom="25dp"
            android:layout_alignBottom="@+id/fasterTextView"
            android:layout_centerHorizontal="true"
            android:typeface="sans"/>

    </RelativeLayout>


</LinearLayout>