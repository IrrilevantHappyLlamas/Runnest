<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- cheat code: negative margin -->

    <ImageView
        android:layout_width="134dp"
        android:layout_height="119dp"
        app:srcCompat="@drawable/profile_head"
        android:id="@+id/imageView3"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="ID: the_runnest_llamas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idTxt"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:text="Family Name: Runnest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailTxt"
        app:layout_constraintLeft_toLeftOf="@+id/idTxt"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/idTxt" />

    <TextView
        android:text="Name: Ihl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/familyNameTxt"
        app:layout_constraintLeft_toLeftOf="@+id/emailTxt"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/emailTxt" />

    <TextView
        android:text="Email: runnest.ihl@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameTxt"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/familyNameTxt"
        app:layout_constraintLeft_toLeftOf="@+id/familyNameTxt" />
</android.support.constraint.ConstraintLayout>