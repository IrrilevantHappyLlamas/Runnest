<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
        android:text="Add User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_user"
        android:layout_below="@+id/firebase_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        tools:ignore="UnknownId"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_user_name"
        android:hint="Name"
        android:layout_below="@+id/edit_user_id"
        android:layout_alignLeft="@+id/edit_user_id"
        android:layout_alignStart="@+id/edit_user_id"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_user_id"
        android:hint="User ID"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/run_user"
        android:hint="User ID"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/edit_user_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:text="Runs:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/retrieved_name"
        android:layout_alignLeft="@+id/retrieved_name"
        android:layout_alignStart="@+id/retrieved_name"
        android:layout_marginTop="46dp"
        android:id="@+id/retrieved_runs"/>

    <TextView
        android:text="Distance: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/effort_dist"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/effort_name"
        android:layout_alignLeft="@+id/effort_name"
        android:layout_alignStart="@+id/effort_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:text="Duration:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/effort_time"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/effort_dist"
        android:layout_alignLeft="@+id/effort_dist"
        android:layout_alignStart="@+id/effort_dist"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="Retrieve User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/retrieve_user"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/effort_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="Add Effort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_effort"
        android:layout_alignTop="@+id/run_user"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="Effort name : demoEffort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/effort_name"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/add_effort"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:text="Name:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/retrieved_name"
        android:layout_below="@+id/get_user"
        android:layout_alignLeft="@+id/effort_time"
        android:layout_alignStart="@+id/effort_time"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/get_user"
        android:hint="User ID"
        android:layout_alignBottom="@+id/retrieve_user"
        android:layout_toRightOf="@+id/retrieve_user"
        android:layout_toEndOf="@+id/retrieve_user"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"/>

</RelativeLayout>