<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upload_db"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:id="@+id/firebase_user"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firebase_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:id="@+id/download_db"
        android:text="Download Remote DB"/>

    <Button
        android:text="Upload Local DB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:id="@+id/upload_db"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/download_db"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:id="@+id/dw_state"/>
</RelativeLayout>