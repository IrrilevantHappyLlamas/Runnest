<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context="ch.ihl.runnest.Fragments.ReceiveChallengeDialogFragment"
             android:id="@+id/request_layout"
             android:background="@color/backgroundApp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_rounded_corners"
            android:layout_margin="15dp"
            android:elevation="23dp">

            <ImageView
                android:layout_height="48dp"
                app:srcCompat="@drawable/challenge_white"
                android:id="@+id/imageView9"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_width="40dp"/>

            <TextView
                android:text="@string/challenge_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/challenge_dlg_title"
                android:textStyle="normal|bold"
                android:textSize="24sp"
                android:gravity="center"
                android:elevation="19dp"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:layout_gravity="center"/>
        </LinearLayout>

        <TextView
            android:text="@string/opponent_challenged_you_on_a_run_based_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_requester"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_margin="20dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/layout_rounded_corners"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="63dp"
                app:srcCompat="@drawable/distance_white"
                android:id="@+id/type_img"
                android:layout_gravity="center"
                android:layout_height="40dp"/>

            <TextView
                android:text="@string/distance_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_challenge_type"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <TextView
            android:text="@string/pre_goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_request_description"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_margin="20dp"
            android:textColor="@android:color/white"/>

        <TextView
            android:text="@string/x_km"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_goal"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <Button
                android:text="@string/cancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/cancel_btn"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/layout_rounded_corners"
                android:elevation="24dp"
                android:textColor="@android:color/white"/>

            <Button
                android:text="@string/decline"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/decline_btn"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:background="@drawable/layout_rounded_corners"
                android:elevation="24dp"
                android:textColor="@android:color/white"/>

            <Button
                android:text="@string/accept"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/accept_btn"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:elevation="24dp"
                android:background="@drawable/button_shape_green"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
